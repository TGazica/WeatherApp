<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_weather_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/weather_description"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/time_sample"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_min_temp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/min_temp_text"
        app:layout_constraintBottom_toTopOf="@id/item_max_temp_text"
        app:layout_constraintStart_toEndOf="@id/item_time"
        app:layout_constraintTop_toBottomOf="@id/item_weather_description" />

    <TextView
        android:id="@+id/item_min_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/temp_test_value"
        app:layout_constraintBottom_toBottomOf="@id/item_min_temp_text"
        app:layout_constraintStart_toEndOf="@id/item_min_temp_text" />

    <TextView
        android:id="@+id/item_max_temp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/max_temp_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_time"
        app:layout_constraintTop_toBottomOf="@id/item_min_temp_text" />

    <TextView
        android:id="@+id/item_max_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/temp_test_value"
        app:layout_constraintBottom_toBottomOf="@id/item_max_temp_text"
        app:layout_constraintStart_toEndOf="@id/item_max_temp_text" />

    <ImageView
        android:id="@+id/item_wind_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/baseline_navigation_black_48dp"
        android:contentDescription="@string/item_wind_direction_pointer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_pressure_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/pressure_text"
        app:layout_constraintBottom_toTopOf="@id/item_humidity_text"
        app:layout_constraintStart_toEndOf="@id/item_max_temp"
        app:layout_constraintTop_toBottomOf="@id/item_weather_description" />

    <TextView
        android:id="@+id/item_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/presure_test_item"
        app:layout_constraintBottom_toBottomOf="@id/item_pressure_text"
        app:layout_constraintStart_toEndOf="@id/item_pressure_text" />

    <TextView
        android:id="@+id/item_humidity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/humidity_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/item_pressure_text"
        app:layout_constraintTop_toBottomOf="@id/item_pressure_text" />

    <TextView
        android:id="@+id/item_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/item_humidity_text"
        app:layout_constraintBottom_toBottomOf="@id/item_humidity_text"
        app:layout_constraintStart_toEndOf="@id/item_humidity_text" />

    <TextView
        android:id="@+id/item_wind_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/wind_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_pressure"
        app:layout_constraintTop_toBottomOf="@id/item_weather_description" />

    <TextView
        android:id="@+id/item_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/wind_test_text"
        app:layout_constraintBottom_toBottomOf="@id/item_wind_text"
        app:layout_constraintStart_toEndOf="@id/item_wind_text" />

</android.support.constraint.ConstraintLayout>